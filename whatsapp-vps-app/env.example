# WhatsApp VPS Application Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=production

# WhatsApp Configuration
WHATSAPP_CLIENT_ID=donasi-apps-vps
WHATSAPP_SESSION_PATH=./sessions

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Security
CORS_ORIGIN=*
ALLOWED_ORIGINS=https://juaraapps.my.id,http://localhost:3000

# Performance
MAX_MEMORY=1G
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# Monitoring
ENABLE_HEALTH_CHECK=true
ENABLE_LOGS=true 